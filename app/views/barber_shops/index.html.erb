<div class="container">
  <div id ="total-barbershops">
    <h1>
      <%= @barber_shops.count %> Résultats:
    </h1>
  </div>
  <div class="cards">
    <% @barber_shops.each do |barber_shop|  %>
      <div class="one-barbershop">
        <div id="big-picture-landscape" >
        <%# barber_shop.photos.first => va récupérer directement l'image principale liée à chaque barber shop %>
        <%= cl_image_tag barber_shop.photos.first.key if barber_shop.photos.attached? %>
          <% # cl_image_tag("https://res.cloudinary.com/ricawdo/image/upload/v1629803085/louisse-lemuel-enad-7GH0B02mBtU-unsplash_fymsnf.jpg") %>
          <div id="reviews-bs">
            <div id="rating-bs">
               <%= barber_shop.reviews.pluck(:rating).reduce%>⭐️
            </div>
            <div id="number-reviews-bs">
              <%= barber_shop.reviews.pluck(:rating).count%> reviews
            </div>

          </div>
        </div>
        <div id="small-picture-square">
          <%# itérer sur barber_shop.porfolios pour afficher chacune des images portfolios du barber_shop %>
          <div id= "first-img" >
          <% if barber_shop.photos.attached?%>
            <%= cl_image_tag barber_shop.portfolios.first.key %>
          <% end %>
          </div>
          <div id="second-img">
          <% if barber_shop.photos.attached?%>
            <%= cl_image_tag barber_shop.portfolios.second.key %>
            <% end %>
          </div>
          <div id="third-img">
          <% if barber_shop.photos.attached?%>
            <%= cl_image_tag barber_shop.portfolios.third.key %>
            <% end %>
          </div>
          <div id="last-img">
          <% if barber_shop.photos.attached?%>
            <%= cl_image_tag barber_shop.portfolios.fourth.key %>
            <% end %>
          </div>
        </div>
        <h1>
          <div id="name-barbershop">
            <%= barber_shop.name %>
          </div>
        </h1>
        <h2>
          <div id="address-barbershop">
            <%= barber_shop.address %>
          </div>
        </h2>
      </div>
    <% end %>
  </div>

</div>

<% console %>
