
<%= render 'shared/carousel' %>
<div class="card-info-barber">
  <div class="info-barber">
    <h2><%= @barber_shop.name %></h2>
    <p><i class="fas fa-home"></i> <%= @barber_shop.address %></p>
  </div>
</div>


<ul class="nav nav-pills mb-1 d-flex justify-content-between" id="pills-tab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="pills-coiffures-tab" data-toggle="pill" href="#pills-coiffures" type="button" role="tab" aria-controls="pills-coiffures" aria-selected="true">Coiffures</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="pills-portfolio-tab" data-toggle="pill" href="#pills-portfolio" type="button" role="tab" aria-controls="pills-portfolio" aria-selected="false">Portfolio</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="pills-notes-tab" data-toggle="pill" href="#pills-notes" type="button" role="tab" aria-controls="pills-notes" aria-selected="false">Notes</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="pills-details-tab" data-toggle="pill" href="#pills-details" type="button" role="tab" aria-controls="pills-details" aria-selected="false">Détails</a>
  </li>
</ul>

<div class="tab-content" id="pills-tabContent">
  <div class="tab-pane fade show active" id="pills-coiffures" role="tabpanel" aria-labelledby="pills-coiffures-tab">
    <% @barber_shop.shop_services.each do |shop_service| %>
      <div class="show-services">
        <div class="service-details">
          <div>
            <h3><%= shop_service.service.name %></h3>
            <p><%= shop_service.description %></p>
          </div>
          <div class="text-right">
            <p><strong><%= shop_service.price %> €</strong></p>
            <p><i class="far fa-clock"></i>  <%= shop_service.duration %>mn</p>
          </div>
        </div>
        <div class="btn-service">
          <a class="btn btn-flat" href="#">Book</a>
        </div>
        <p class="underline"></p>
      </div>
    <% end %>
  </div>

  <div class="tab-pane fade" id="pills-portfolio" role="tabpanel" aria-labelledby="pills-portfolio-tab">
    <div class="portfolio_wrap">
      <% @barber_shop.portfolios.each do |photo| %>
        <div class="realisations">
          <%= cl_image_tag photo.key, height:100, crop: :fill %>
            <div class="text-photo-barber">
              <p><i class="far fa-heart"></i></p>
              <p><i class="far fa-comment"></i></p>
              <p><i class="fas fa-share"></i></p>
            </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="tab-pane fade" id="pills-notes" role="tabpanel" aria-labelledby="pills-notes-tab">
    <div class="card-review">
      <div class="moyenne-rating">
        <div class="moyenne">
          <p>Note moyenne</p>
        </div>
        <div class="star-rating">
          <p>5 <i class="far fa-star"></i></p>
          <p>4 <i class="far fa-star"></i></p>
          <p>3 <i class="far fa-star"></i></p>
          <p>2 <i class="far fa-star"></i></p>
          <p>1 <i class="far fa-star"></i></p>
          <p>0 <i class="far fa-star"></i></p>
        </div>
      </div>
    </div>
    <div class="comment-rating">
      <% @barber_shop.reviews.each do |review| %>
        <div class="notification">
          <div class="notification-content">
            <img src='https://img1.freepng.fr/20180319/epw/kisspng-india-login-computer-icons-emoticon-medicine-user-login-icon-5ab05c8bc2f8d1.4479395815215074677986.jpg' class="avatar" />
            <p><%= review.user.first_name %> <%= review.user.last_name %></p>
            <p><%= review.rating %></p>
            <p id='comment-user'><%= review.comment %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="tab-pane fade" id="pills-details" role="tabpanel" aria-labelledby="pills-details-tab">
    <div class="card-map">
      <p><%= @barber_shop.address %></p>
    </div>
    <br>
    <p>numero</p>
    <br>
    <div class="opening-hours">
    </div>
  </div>
</div>
